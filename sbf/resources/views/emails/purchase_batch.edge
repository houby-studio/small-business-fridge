<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
  </head>
  <body style="font-family: Arial, sans-serif; max-width: 600px; margin: 0 auto; padding: 20px;">
    <h2 style="color: #cf112a;">
      {{ i18n.t('emails.purchase_batch_heading') }}
    </h2>
    <p>
      {{ i18n.t('emails.purchase_batch_intro', { name: buyerName }) }}
    </p>
    <table style="width: 100%; border-collapse: collapse; margin: 20px 0;">
      <thead>
        <tr style="background: #f5f5f5;">
          <th style="padding: 10px; border: 1px solid #ddd; text-align: left;">
            {{ i18n.t('emails.purchase_batch_product') }}
          </th>
          <th style="padding: 10px; border: 1px solid #ddd; text-align: center; white-space: nowrap;">
            {{ i18n.t('emails.purchase_batch_qty') }}
          </th>
          <th style="padding: 10px; border: 1px solid #ddd; text-align: right; white-space: nowrap;">
            {{ i18n.t('emails.purchase_batch_unit_price') }}
          </th>
          <th style="padding: 10px; border: 1px solid #ddd; text-align: right; white-space: nowrap;">
            {{ i18n.t('emails.purchase_batch_subtotal') }}
          </th>
        </tr>
      </thead>
      <tbody>
        @each(item in items)
          <tr>
            <td style="padding: 10px; border: 1px solid #ddd;">
              {{ item.productName }}
            </td>
            <td style="padding: 10px; border: 1px solid #ddd; text-align: center;">
              {{ item.quantity }}
            </td>
            <td style="padding: 10px; border: 1px solid #ddd; text-align: right;">
              {{ i18n.t('common.price_with_currency', { price: item.unitPrice }) }}
            </td>
            <td style="padding: 10px; border: 1px solid #ddd; text-align: right;">
              {{ i18n.t('common.price_with_currency', { price: item.subtotal }) }}
            </td>
          </tr>
        @end
      </tbody>
      <tfoot>
        <tr style="background: #f5f5f5; font-weight: bold;">
          <td colspan="3" style="padding: 10px; border: 1px solid #ddd; text-align: right;">
            {{ i18n.t('emails.purchase_batch_total') }}
          </td>
          <td style="padding: 10px; border: 1px solid #ddd; text-align: right;">
            {{ i18n.t('common.price_with_currency', { price: totalCost }) }}
          </td>
        </tr>
        <tr>
          <td colspan="4" style="padding: 10px; border: 1px solid #ddd; color: #666; font-size: 12px;">
            {{ i18n.t('emails.purchase_batch_date') }}: {{ date }}
          </td>
        </tr>
      </tfoot>
    </table>
    <p style="color: #666; font-size: 12px; margin-top: 24px;">
      â€” <a href="{{ appUrl }}" style="color: #cf112a; text-decoration: none;">{{ i18n.t('common.app_name') }}</a>
    </p>
  </body>
</html>
