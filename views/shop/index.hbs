                            <p>Skladem: 15</p>
                        </div>
                        <div class="row">
                            <div class="col-xl">
                                <div class="input-group mb-3">
                                        <input type="text" class="form-control" value="{{ this.price }}" disabled>
                                    <div class="input-group-append">
                                        <span class="input-group-text">Kƒç</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl">
                                <a href="#" class="btn btn-primary float-right">Zakoupit</a>
                            </div>
                        </div>
                    </div>
                </div>
