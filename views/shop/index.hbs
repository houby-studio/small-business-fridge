                    <img src="{{ this.imagePath }}" class="mx-auto img-responsive" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">{{ this.displayName }}</h5>
                        <p class="card-text">{{ this.description }}</p>
                    </div>
