<div class='row'>
  <div class='col'>
    <div class='card text-center mx-3 mx-lg-auto w-lg-75 w-xxl-50'>
      <div class='card-header h4'>
        Stav skladu
      </div>
      <div class='card-body'>
        <div class='table-responsive'>
          <table class='table'>
            <thead>
              <tr>
                <th scope='col' class='text-start'>Produkt</th>
                <th scope='col'>Zakoupeno za posledních 14 dní</th>
                <th scope='col'>Skladem</th>
              </tr>
            </thead>
            <tbody>
              {{#each stock}}
                <tr>
                  <th scope='row' class='text-start'>{{this.display_name}}</th>
                  <td>{{this.last_Xdays}}</td>
                  <td>{{this.amount_left}}</td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>