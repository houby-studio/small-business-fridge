{{# each products }}
    <div class="row">
        {{# each this }}
            <div class="col-lg-3 py-3">
                <div class="card h-100 text-center">
                    <form id="shop_buy_product" class="needs-validation" method="POST" action="/add_products_form" novalidate></form>
                    <div class="card-header h4">
                        {{ this.displayName }}
                    </div>
                    <img src="{{ this.imagePath }}" class="mx-auto my-2 img-fluid shop-image-thumbnail" alt="{{ this.description }}">
                    <div class="card-body">
                        <p class="card-text">{{ this.description }}</p>
                    </div>
                    <div class="card-footer text-muted">
                        <div class="row">
                            {{#if this.stock.0.amount_left}}
                                <p>Skladem za tuto cenu: {{ this.stock.0.amount_left }}</p>
                            {{else}}
                                <p>Produkt není skladem.</p>
                            {{/if }}
                        </div>
                        <div class="row">
                            <div class="col-xl">
                                <div class="input-group mb-3">
                                        {{#if this.stock.0.price }}
                                            <input type="text" class="form-control" value="{{ this.stock.0.price }}" disabled>
                                        {{else}}
                                            <input type="text" class="form-control" value="B00M" disabled>
                                        {{/if}}
                                    <div class="input-group-append">
                                        <span class="input-group-text">Kč</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl">
                                <a href="#" class="btn btn-primary float-right">Zakoupit</a>
                            </div>
                        </div>
                        <input type="hidden" id="user_id" name="user_id" value="{{ ../../user.id }}">
                        <input type="hidden" id="product_id" name="product_id" value="{{ this._id }}">
                    </div>
                    </form>
                </div>
            </div>
        {{/each}}
    </div>
{{/each}}