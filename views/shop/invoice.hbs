<div class="row">
    <div class="col">
        <div class="card text-center mx-auto">
            <div class="card-header h4">
                Fakturace
            </div>
            <div class="card-body">
                <form id="invoice_all" class="needs-validation h-100" method="POST" action="/invoice" novalidate>
                    <input type="submit" class="btn btn-primary" value="Vyfakturovat">
                </form>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col">
        <div class="card text-center mx-auto">
            <div class="card-header h4">
                Celkový přehled
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <tbody>
                            <tr>
                                <th scope="row" class="text-left"><i class="far fa-money-bill-alt" alt="Nevyfakturováno"></i> Celkem k fakturaci</th>
                                <td class="font-weight-bold">{{ stock.total_num_orders_notinvoiced }}ks</td>
                                <td class="font-weight-bold">{{ stock.total_sum_orders_notinvoiced }}Kč</td>
                            </tr>
                            <tr>
                                <th scope="row" class="text-left"><i class="fas fa-file-invoice-dollar" alt="Vyfakturováno"></i> Celkem fakturováno</th>
                                <td>{{ stock.total_num_orders_invoiced }}ks</td>
                                <td>{{ stock.total_sum_orders_invoiced }}Kč</td>
                            </tr>
                            <tr>
                                <th scope="row" class="text-left"><i class="fas fa-boxes" alt="Sklad"></i> Celkem na skladě</th>
                                <td>{{ stock.total_num_stocked }}ks</td>
                                <td>{{ stock.total_sum_stocked }}Kč</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row mt-3">
    <div class="col">
        <div class="card text-center mx-auto">
            <div class="card-header h4">
                Podrobný přehled
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-xl-6 pr-xl-none">
        <div class="card text-center mx-auto">
            <div class="card-header h4">
                Podle kusů
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <th scope="col" class="text-left">Produkt</th>
                            <th scope="col" class="font-weight-bold" data-toggle="tooltip" title="Nevyfakturováno"><i class="far fa-money-bill-alt" alt="Nevyfakturováno"></i></th>
                            <th scope="col" data-toggle="tooltip" title="Vyfakturováno"><i class="fas fa-file-invoice-dollar" alt="Vyfakturováno"></i></th>
                            <th scope="col" data-toggle="tooltip" title="Sklad"><i class="fas fa-boxes" alt="Sklad"></i></th>
                        </thead>
                        <tbody>
                            {{#each stock.stock}}
                            <tr>
                                <th scope="row" class="text-left text-nowrap">{{ this.product.displayName }}</th>
                                <td class="font-weight-bold">{{ this.num_orders_notinvoiced }}ks</td>
                                <td>{{ this.num_orders_invoiced }}ks</td>
                                <td>{{ this.amount_left }}ks</td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-6 pl-xl-none">
        <div class="card text-center mx-auto">
            <div class="card-header h4">
                Podle částky
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <th scope="col" class="text-left hide-xl">Produkt</th>
                            <th scope="col" class="font-weight-bold" data-toggle="tooltip" title="Nevyfakturováno"><i class="far fa-money-bill-alt" alt="Nevyfakturováno"></i></th>
                            <th scope="col" data-toggle="tooltip" title="Vyfakturováno"><i class="fas fa-file-invoice-dollar" alt="Vyfakturováno"></i></th>
                            <th scope="col" data-toggle="tooltip" title="Sklad"><i class="fas fa-boxes" alt="Sklad"></i></th>
                        </thead>
                        <tbody>
                            {{#each stock.stock}}
                            <tr>
                                <th scope="row" class="text-left hide-xl text-nowrap">{{ this.product.displayName }}</th>
                                <td class="font-weight-bold">{{ this.sum_orders_notinvoiced }}Kč</td>
                                <td>{{ this.sum_orders_invoiced }}Kč</td>
                                <td>{{ this.sum_stocked }}Kč</td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
