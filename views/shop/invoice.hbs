<div class="row">
    <div class="col">
        <div class="card text-center w-50 mx-auto w-100-lg">
            <div class="card-header h4">
                Vyfakturovat
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <tbody>
                            <tr>
                                <th scope="row" class="text-left">Celkem k fakturaci</th>
                                <td>{{ stock.total_num_orders_notinvoiced }} Ks</td>
                                <td>{{ stock.total_sum_orders_notinvoiced }} Kč</td>
                            </tr>
                            <tr>
                                <th scope="row" class="text-left">Celkem fakturováno</th>
                                <td>{{ stock.total_num_orders_invoiced }} Ks</td>
                                <td>{{ stock.total_sum_orders_invoiced }} Kč</td>
                            </tr>
                            <tr>
                                <th scope="row" class="text-left">Celkem na skladě</th>
                                <td>{{ stock.total_num_stocked }} Ks</td>
                                <td>{{ stock.total_sum_stocked }} Kč</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row mt-3">
    <div class="col">
        <div class="card text-center w-50 mx-auto w-100-lg">
            <div class="card-header h4">
                Podrobný přehled
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <th scope="col" class="text-left">Produkt</th>
                            <th scope="col"># vyfakturovaných</th>
                            <th scope="col"># nevyfakturovaných</th>
                            <th scope="col">Částka k fakturaci</th>
                            <th scope="col">Fakturováno</th>
                            <th scope="col">Hodnota na skladě</th>
                        </thead>
                        <tbody>
                            {{#each stock.stock}}
                            <tr>
                                <th scope="row" class="text-left">{{ this.product.displayName }}</th>
                                <td>{{ this.num_orders_invoiced }}ks</td>
                                <td>{{ this.num_orders_notinvoiced }}ks</td>
                                <td>{{ this.sum_orders_notinvoiced }}Kč</td>
                                <td>{{ this.sum_orders_invoiced }}Kč</td>
                                <td>{{ this.sum_stocked }}Kč</td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
