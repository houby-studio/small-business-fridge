<table
  width='640'
  cellpadding='0'
  cellspacing='0'
  border='0'
  class='wrapper'
  bgcolor='#f6f6f6'
>
  <tr>
    <td height='10' style='font-size:10px; line-height:10px;'>&nbsp;</td>
  </tr>
  <tr>
    <td align='center' valign='top'>

      <table
        width='600'
        cellpadding='0'
        cellspacing='0'
        border='0'
        class='container'
      >
        <tr>
          <td align='center' valign='top'>
            <h2>Děkujeme za nákup!</h2>
          </td>
        </tr>
      </table>

    </td>
  </tr>
  <tr>
    <td height='10' style='font-size:10px; line-height:10px;'>&nbsp;</td>
  </tr>
</table>

<table
  width='640'
  cellpadding='0'
  cellspacing='0'
  border='0'
  class='wrapper'
  bgcolor='#f6f6f6'
>
  <tr>
    <td height='10' style='font-size:10px; line-height:10px;'>&nbsp;</td>
  </tr>
  <tr>
    <td align='center' valign='top'>

      <table
        width='600'
        cellpadding='0'
        cellspacing='0'
        border='0'
        class='container'
      >
        <tr>
          <td width='300' class='mobile' align='center' valign='top'>
            {{! Table for purchase details }}
            <table
              width='100%'
              cellpadding='0'
              cellspacing='0'
              border='1'
              bgcolor='#fff'
            >
              <tr>
                <td align='center' valign='top' colspan='2'>
                  <h3>Detail objednávky</h3>
                </td>
              </tr>
              {{#each order}}
                <tr>
                  <td align='left' valign='top'>
                    <b>{{@key}}</b>
                  </td>
                  <td align='left' valign='top'>
                    {{this}}
                  </td>
                </tr>
              {{/each}}
            </table>
          </td>
          <td width='300' class='mobile' align='center' valign='top'>
            <img
              src='cid:image@prdelka.eu'
              width=''
              height='300'
              style='margin:0; padding:0; border:none; display:block;'
              border='0'
              alt='Obrázek produktu'
            />
          </td>
        </tr>
      </table>

    </td>
  </tr>
  <tr>
    <td height='10' style='font-size:10px; line-height:10px;'>&nbsp;</td>
  </tr>
  <tr>
    <td>
      {{> middlebutton }}
    </td>
  </tr>
  <tr>
    <td height='10' style='font-size:10px; line-height:10px;'>&nbsp;</td>
  </tr>
</table>