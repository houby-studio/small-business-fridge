{{! Single column template }}
<table
  width='640'
  cellpadding='0'
  cellspacing='0'
  border='0'
  class='wrapper'
  bgcolor='#f6f6f6'
>

  {{! Spacer }}
  <tr>
    <td height='10' style='font-size:10px; line-height:10px;'>&nbsp;</td>
  </tr>

  <tr>
    <td align='center' valign='top'>

      <table
        width='600'
        cellpadding='0'
        cellspacing='0'
        border='0'
        class='container'
      >
        <tr>

          {{! Middle column }}
          <td align='center' valign='top'>
            Grid One
          </td>

        </tr>
      </table>

    </td>
  </tr>

  {{! Spacer }}
  <tr>
    <td height='10' style='font-size:10px; line-height:10px;'>&nbsp;</td>
  </tr>

</table>