<form
  id='admin_new_category'
  class='needs-validation'
  method='POST'
  action='/new_category'
  novalidate
>
  <div class='card mx-3 mt-3 mx-lg-auto w-lg-75 w-xxl-50'>
    <div class='card-header h4 text-center'>
      <i class='fa-solid fa-filter'></i>
      Nová kategorie
    </div>
    <div class='card-body'>
      <div class='row'>

        {{! Existing categories }}
        <div class='col-md-4 mb-2 text-center'>
          <ul class='list-group'>
            <li class='list-group-item'><h5>Existující kategorie</h5></li>
            {{#each categories}}
              <li class='list-group-item {{#if this.disabled}}text-decoration-line-through{{/if}}'><i
                  style='color: {{this.color}};'
                  class='fa-solid fa-circle'
                ></i>
                {{this.name}}</li>
            {{/each}}
          </ul>
        </div>

        <div class='col-md-8 mb-2'>
          {{! Category name }}
          <div class='input-group input-group-lg mb-3'>
            <span
              class='input-group-text w-25'
              id='category_name-addon'
            >Název</span>
            <input
              type='text'
              name='category_name'
              class='form-control'
              placeholder='Název'
              aria-label='Název'
              aria-describedby='category_name-addon'
              required
            />
          </div>

          {{! Category color }}
          <div class='input-group input-group-lg mb-3'>
            <span
              class='input-group-text w-25'
              id='category_color-addon'
            >Barva</span>
            <span class='input-group-text form-control'>
              <input
                type='color'
                name='category_color'
                class='form-control form-control-color w-100'
                value='#000000'
                title='Vyberte barvu kategorie'
              />
            </span>
          </div>
        </div>
      </div>
    </div>
    {{! End of card-body }}
    <div class='card-footer text-muted'>
      <div class='d-grid gap-2 d-md-flex justify-content-md-end'>
        <a href='/' class='btn btn-danger me-md-2'>Storno</a>
        <input
          type='submit'
          class='btn btn-success float-end'
          value='Vytvořit'
        />
      </div>
    </div>
  </div>
  <input type='hidden' name='_csrf' value='{{csrfToken}}' />
</form>

<script src='/javascripts/form_validate.js'></script>